{
  "name": "bonsale_3cx-outbound-campaign",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "backend": "cd apps/backend && pnpm run dev",
    "frontend": "cd apps/frontend && pnpm run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/backend/**/*.{js,ts}": [
      "cd apps/backend && npm run lint",
      "cd apps/backend && npm run type-check"
    ],
    "apps/frontend/**/*.{js,jsx,ts,tsx}": [
      "cd apps/frontend && npm run lint"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "async-mutex": "^0.5.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "redis": "^5.8.2",
    "rrule": "^2.8.1"
  }
}
