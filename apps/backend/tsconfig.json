{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../packages/shared-types/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/types"],
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}